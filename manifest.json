{

  "description": "Shows desktime's remaining time when clicking the desktime button on  browser toolbar.",
  "manifest_version": 2,
  "author": "Shajan Jacob",
  "name": "Desktiming",
  "version": "1.5",
  "homepage_url": "https://github.com/shajanjp/desktiming",
  "icons": {
    "48": "icons/desktime-logo.png"
  },

  "permissions": [
    "webRequest",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/desktime-logo.png",
    "theme_icons": [{
      "light": "icons/desktime-logo.png",
      "dark": "desktime-logo.png",
      "size": 32
    }],
    "default_title": "Desktiming",
    "default_popup": "popup/desktime.html"
  }
}